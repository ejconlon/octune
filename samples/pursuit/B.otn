module Pursuit.B

self = [
    |16> selfA
    |16>
    [+ 
        selfB
        [! 0.6 : [^ SAWTOOTH :
            12_
            |4> 'e.C4 'sBb3 'eC4 'eEb4 'eG4 'eF4 'eE4 'eC4
        ^] !]
    +]
    |16>
    [+
        selfA
        [! 0.6 : [^ SAWTOOTH : hornsA ^] !]
    +]
    |16>
    [+
        selfB
        [! 0.6 : [^ SAWTOOTH : hornsB ^] !]
    +]
]

selfA = [+
    [^ SAWTOOTH : melodyA ^]
    [^ TRIANGLE : accompA ^]
    counterA
    [! 1.15 : bassA !]
    drumsA
+]

selfB = [+
    [^ SAWTOOTH : melodyB ^]
    [^ TRIANGLE : accompB ^]
    counterB
    [! 1.15 : bassB !]
    drumsB
+]


melodyA = [
    |4> 'q.Eb5 sD5 sEb5 'q.F5 sEb5 sF5
    |4> 'q.G5 sF5 sEb5 eF5 'eEb5 'eD5 'eBb4
    |4> qC5 qC6 qBb5 qF5
    |4> 'q.G5 sF5 sG5 hF5
]
accompA = [
    |4> 'q.C5 sBb4 sC5 'q.D5 sC5 sD5
    |4> 'q.Eb5 sD5 sC5 eD5 'eC5 'eBb4 'eG4
    |4> qAb4 qAb5 qG5 qD5
    |4> 'q.C5 sB4 sC5 hD5
]

melodyB = [
    |4> 'q.Eb5 sD5 sBb4 qF4 qBb4
    |4> 'q.C5 sD5 sEb5 'eG5 'eF5 'eEb5 'eD5
    |4> 'q.C5 sBb4 sC5 e.Bb4 'e.D5 eBb4
    |4> h.C5 q_
]
accompB = [
    |4> 'q.C5 sBb4 sG4 qD4 qG4
