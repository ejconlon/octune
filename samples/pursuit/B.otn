    |4> 'q.Ab4 sG4 sF4 e.G4 'e.F4 eD4
    |4> h.Eb4 q_
]


counterA = [
    |4> 'qEb3 eC4 'eEb4 'e.D4 'e.Bb3 'eG3
    |4> 'qC3 eAb3 'eC4 'e.Bb3 'e.G3 'eEb3
